<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Pantry</title>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Welcome to my Pantry</h1>
    <a href="/users/<%= user._id %>/foods/new">Add new item</a>
    <ul>
    <% if (pantry.length > 0) { %>
        <% pantry.forEach((food) => { %>
           <li>
            <a href="/users/<%= user._id %>/foods/<%= food._id %>">
                <%= food.item %>, and we have <%= food.quantity %> of them!
            </a>
            <form action="/users/<%= user._id %>/foods/<%= food._id %>?_method=DELETE" method="POST">
                <button type="submit">Delete</button>
              </form>
              <a href="/users/<%= user._id %>/foods/<%= food._id %>/edit">Edit</a>
           </li> 
        <% }); %>

    <% } else { %>
        <p>There are no items in this pantry.</p>
    <% } %>
    </ul>
</body>
</html>